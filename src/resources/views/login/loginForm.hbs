<div class="login-container">
    <div class="forms-container">
        <div class="signin-signup">
            <form action="" class="sign-in-form" method="POST" onsubmit="handleLogin(event)">
                <h2 class="title">Sign in</h2>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input autocomplete="off" type="text" placeholder="Username" name="username" readonly
                        onfocus="this.removeAttribute('readonly');" onchange="handleChange(event)" />
                </div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input autocomplete="off" type="password" placeholder="Password" name="password" readonly
                        onfocus="this.removeAttribute('readonly');" onchange="handleChange(event)" />
                </div>
                <input type="submit" value="Login" class="btn solid" />
                <p class="social-text">Or Sign in with social platforms</p>
                <div class="social-media">
                    <a href="#" class="social-icon">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-google"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                </div>
            </form>
            <form action="" class="sign-up-form" method="POST" onsubmit="handleRegister(event)">
                <h2 class="title">Sign up</h2>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input autocomplete="off" type="text" placeholder="Username" name="username" readonly
                        onfocus="this.removeAttribute('readonly');" onchange="handleChange(event)" />
                </div>
                <div class="input-field">
                    <i class="fas fa-envelope"></i>
                    <input autocomplete="off" type="email" placeholder="Email" name="email" readonly
                        onfocus="this.removeAttribute('readonly');" onchange="handleChange(event)" />
                </div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input autocomplete="off" type="password" placeholder="Password" name="password" readonly
                        onfocus="this.removeAttribute('readonly');" onchange="handleChange(event)" />
                </div>
                <input type="submit" class="btn" value="Sign up" />
                <p class="social-text">Or Sign up with social platforms</p>
                <div class="social-media">
                    <a href="#" class="social-icon">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-google"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="panels-container">
        <div class="panel left-panel">
            <div class="content">
                <h3>New here ?</h3>
                <p>
                    Lorem ipsum, dolor sit amet consectetur adipisicing elit. Debitis,
                    ex ratione. Aliquid!
                </p>
                <button class="btn transparent" id="sign-up-btn">
                    Sign up
                </button>
            </div>
            <img src="" class="image imagesign-up" alt="" />
        </div>
        <div class="panel right-panel">
            <div class="content">
                <h3>One of us ?</h3>
                <p>
                    Lorem ipsum dolor sit amet consectetur adipisicing elit. Nostrum
                    laboriosam ad deleniti.
                </p>
                <button class="btn transparent" id="sign-in-btn">
                    Sign in
                </button>
            </div>
            <img src="" class="image imagesign-in" alt="" />
        </div>
    </div>
</div>

