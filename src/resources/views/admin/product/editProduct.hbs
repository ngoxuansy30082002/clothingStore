<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<div class="mt-4">
    <h3 style="margin-left: 80px;">Cập nhật sản phẩm</h3>
    <form class="mt-4" action="/admin/product/{{product._id}}?_method=PUT" method="POST">
        {{#each product.image}}
        <div style="width: 100%; margin-top:20px;" class="form-group">
            <label for="image" class="form-label">Ảnh {{sum @index 1}}</label>
            <textarea class="form-control" id="image" name="image">{{this}}</textarea>
        </div>
        {{/each}}

        <div style="width: 100%; margin-top:20px;" class="form-group">
            <label for="name" class="form-label">Tên sản phẩm</label>
            <input type="text" class="form-control" value="{{product.name}}" id="name" name="name">
        </div>
        <div style="width: 100%; margin-top:20px;" class="form-group">
            <label for="catelogy" class="form-label">Loại</label>
            <input type="text" class="form-control" value="{{product.catelogy}}" id="catelogy" name="catelogy">
        </div>
        <div style="width: 100%; margin-top:20px;" class="form-group">
            <label for="brand" class="form-label">Thương hiệu</label>
            <input type="text" class="form-control" value="{{product.brand}}" id="brand" name="brand">
        </div>
        <div style="width: 100%; margin-top:20px;" class="form-group">
            <label for="price" class="form-label">Giá</label>
            <input type="text" class="form-control" value="{{product.price}}" id="price" name="price">
        </div>
        <div style="width: 100%; margin-top:20px;" class="form-group">
            <label for="size" class="form-label">Size</label>
            <input type="text" class="form-control" value="{{product.size}}" id="size" name="size">
        </div>
        <div style="width: 100%; margin-top:20px;" class="form-group">
            <label for="description" class="form-label">Mô tả sản phẩm</label>
            <textarea style="height: 300px;" class="form-control" id="description"
                name="description">{{product.description}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>