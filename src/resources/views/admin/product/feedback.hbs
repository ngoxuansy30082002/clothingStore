<form style="margin-top: 20px;" class="admin__product">
    <div style="position: relative;margin-bottom:20px;">
        <h3 style="display: inline-block;">Feedback của {{product.name}}</h3>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">Rating</th>
                <th style="width:40%; margin-right:200px" scope="col">Comment</th>
            </tr>
        </thead>
        <tbody>
            {{#each feedbacks}}
            {{#each ../users}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.username}}</td>
                <td>{{this.email}}</td>
                <td>{{../this.rating}}</td>
                <td>{{../this.comment}}</td>
                <td style="position:relative; width: 160px;">
                    <button style="position:absolute;right:0; font-size: 12px; font-weight:600" data-bs-toggle="modal"
                        data-bs-target="#delete-product-modal" data-bs-id="{{this._id}}" type="button"
                        class="btn btn-outline-danger deleteBtn">Xoá
                    </button>
                </td>
            </tr>
            {{!-- {{else}}
            <tr>
                <td colspan="5" class="text-center">
                    Chưa có Blog nào được đăng tải.
                    <a style="font-weight:700" href="/admin/blog/create"> Thêm Blog</a>
                </td>
            </tr> --}}
            {{/each}}
            {{/each}}
        </tbody>
    </table>
</form>
