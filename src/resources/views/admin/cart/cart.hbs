<link rel="stylesheet" href="/css/admin.css">
<link rel="stylesheet" href="/css/button.css">



<section id="" class="section-p1">
    <div style="position: relative;margin-bottom:20px;">
        <h3 style="display: inline-block;">Tất cả đơn đặt hàng</h3>
    </div>
    <table class="table">
        <thead>
            <tr>
                {{!-- <th class="admin__product__stt" scope="col"><i class="fa-solid fa-check"></i></th> --}}
                <th class="admin__product__price" scope="col">Thanh toán</th>
                <th class="admin__product__image" scope="col">Ảnh</th>
                <th class="admin__product__name" scope="col">Tên sản phẩm</th>
                <th class="admin__product__catelogy" scope="col">Tên khách hàng</th>
                <th class="admin__product__brand" scope="col">Số lượng</th>
                <th class="admin__product__price" scope="col">Size</th>
                <th class="admin__product__price" scope="col">Tổng tiền</th>
            </tr>
        </thead>
        <tbody>
            {{#each carts}}
            <tr>
                <td scope="row">
                    {{#if this.paid}}
                    <i style="color: rgb(4, 165, 4);" class="fa-solid fa-check"></i>
                    {{else}}
                    <i style="color: red;" class="fa-solid fa-xmark"></i>
                    {{/if}}
                </td>
                <td><img class="admin__product__img" src="{{this.product.image.[0]}}" alt=""></td>
                <td>
                    {{this.product.name}}
                </td>
                <td><a href="http://">{{this.user.username}}</a></td>
                <td>{{this.quantity}}</td>
                <td>{{this.size}}</td>
                <td>{{formatPrice (mul this.quantity this.product.price)}}</td>
                <td>
                    {{#if this.paid}}
                    {{#if this.delivered}}
                    Đã giao hàng
                    {{else}}
                    <button class="custom-btn btn-9">Giao hàng</button>
                    {{/if}}
                    {{else}}
                    Chưa thanh toán
                    {{/if}}

                </td>
            </tr>
            {{else}}
            <tr>
                <td colspan="7" class="text-center">
                    Chưa có đơn đặt hàng nào.
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

</section>

