<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<div class="mt-4">
    <h3 style="margin-left: 80px;">Thêm Blog</h3>
    <form class="mt-4" action="/admin/blog/create" method="POST">
        <div style="width: 100%; margin-top:20px;" class="form-group">
            <label for="image" class="form-label">Ảnh </label>
            <textarea class="form-control" id="image" name="image"></textarea>
        </div>
        <div style="width: 100%; margin-top:20px;" class="form-group">
            <label for="title" class="form-label">Tiêu đề</label>
            <input type="text" class="form-control" value="" id="title" name="title">
        </div>
        <div style="width: 100%; margin-top:20px;" class="form-group">
            <label for="description" class="form-label">Chi tiết</label>
            <textarea style="height: 300px;" class="form-control" id="description" name="description"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>